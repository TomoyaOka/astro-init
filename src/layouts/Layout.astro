---
import Header from "./Header.astro";
import Footer from "./Footer.astro";
import "../styles/reset.scss";
import "../styles/functions.scss";

const { title } = Astro.props;

//OGP
// const socialImageURL = new URL(Astro.url.pathname, Astro.site);
const product_site = "https://astro-init-pink.vercel.app/";
const ogpImageURL = `${product_site}ogp.jpg`;

const siteUrl =  Astro.site;
const siteTitle:string = "site";
const siteType:string = "website";
const siteDiscription:string = "Description";
const twitterCard:string = "summary_large_image";
---

<!DOCTYPE html>
<html lang="ja">
	<head>
    <!-- meta -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={siteDiscription} />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:type" content={siteType} />
    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={siteDiscription} />
    <meta property="og:site_name" content={siteTitle} />
    <meta property="og:image" content={ogpImageURL} />
    <meta name="twitter:card" content={twitterCard} />
    <meta name="twitter:title" content={siteTitle} />
    <meta name="twitter:description" content={siteDiscription} />
    <meta name="twitter:image" content={ogpImageURL} />
    <!-- / -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header/>
		<slot />
		<Footer/>
	</body>
</html>


<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);

  --main-color: #02957a;
  --sub-color: #f2e8d5;
  --text-color: #181818;
  --color-black: #000;


  --layout-nav-color: #ffffff;

  --bg-color: #f2f2f2;
  --border-color: #d4d4d4;

  --xxl: 3.6rem;
  --xl: 3.2rem;
  --lg: 2.4rem;
  --lmd: 1.8rem;
  --md: 1.6rem;
  --sm: 1.4rem;
  --ss: 1.2rem;
  --index-header: 100;
  --index-modal: 200;
  --index-animation: 1000;
  --inner: 134rem;
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: #F6F6F6;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>
